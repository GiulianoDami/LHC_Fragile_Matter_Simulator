{
  "simulation": {
    "name": "LHC_Fragile_Matter_Simulator",
    "version": "1.0.0",
    "description": "Monte Carlo simulation for fragile nuclear particle formation in high-energy collisions"
  },
  "parameters": {
    "initial_temperature": {
      "value": 1.5e12,
      "unit": "Kelvin",
      "description": "Initial temperature of the collision fireball"
    },
    "collision_energy": {
      "value": 13000,
      "unit": "GeV",
      "description": "Total collision energy"
    },
    "duration": {
      "value": 1e-23,
      "unit": "seconds",
      "description": "Total simulation duration"
    },
    "temperature_cooling_rate": {
      "value": 1e20,
      "unit": "K/s",
      "description": "Rate of temperature decrease during expansion"
    },
    "particle_formations": {
      "deuteron_energy_threshold": {
        "value": 100,
        "unit": "MeV",
        "description": "Energy threshold for deuteron formation"
      },
      "antideuteron_energy_threshold": {
        "value": 100,
        "unit": "MeV",
        "description": "Energy threshold for antideuteron formation"
      }
    }
  },
  "settings": {
    "monte_carlo_steps": 100000,
    "random_seed": 42,
    "output_interval": 1000,
    "visualization": {
      "enabled": true,
      "plot_temperature_evolution": true,
      "plot_particle_distribution": true
    }
  },
  "output": {
    "results_file": "simulation_results.json",
    "plots_directory": "plots/",
    "log_file": "simulation.log"
  }
}